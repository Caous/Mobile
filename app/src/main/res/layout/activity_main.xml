<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_marginTop="30sp"
        android:scaleType="fitCenter"
        android:src="@drawable/android"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:gravity="center"
        android:text="Gerenciamento Produtos"
        android:textSize="20sp"></TextView>


    <EditText
        android:id="@+id/nomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:hint="Nome do produto"
        android:inputType="text"
        android:textSize="20sp"></EditText>

    <EditText
        android:id="@+id/valorVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:hint="Valor de venda"
        android:inputType="numberDecimal"
        android:textSize="20sp"></EditText>

    <EditText
        android:id="@+id/valorCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:hint="Valor de compra"
        android:inputType="numberDecimal"
        android:textSize="20sp"></EditText>

    <TextView
        android:id="@+id/txtLucrosDespesas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:textSize="20sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnAbrir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_open"
            android:drawableRight="@drawable/ic_open"
            android:padding="20sp"
            android:text="Abrir"
            ></Button>
        <Button
            android:id="@+id/btnCadastrar"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_save"
            android:drawableRight="@drawable/ic_save"
            android:padding="20sp"
            android:text="Cadastrar"></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"><Button
        android:id="@+id/btnDespesaLucro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableEnd="@drawable/ic_open"
        android:drawableRight="@drawable/ic_open"
        android:padding="20sp"
        android:text="CALC. Lucro/PrejuÃ­zo"></Button></LinearLayout>

</LinearLayout>
